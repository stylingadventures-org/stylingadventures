# Environment Configuration
# Set to "dev", "staging", or "prod" to load public/config.{env}.json
VITE_APP_ENV=dev

# AppSync Configuration
VITE_APPSYNC_URL=https://your-api-id.appsync-api.us-east-1.amazonaws.com/graphql
VITE_APPSYNC_API_ID=your-api-id

# Cognito Configuration
VITE_USER_POOL_ID=us-east-1_xxxxx
VITE_USER_POOL_WEB_CLIENT_ID=xxxxxxxxxxxxx
VITE_IDENTITY_POOL_ID=us-east-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# API Configuration
VITE_UPLOADS_API_URL=https://api.stylingadventures.com
VITE_API_REGION=us-east-1

# Auth Redirect URIs (environment-specific)
VITE_AUTH_REDIRECT_URI=https://stylingadventures.com/auth/callback
VITE_AUTH_LOGOUT_URI=https://stylingadventures.com

# Allowed Origins (comma-separated)
VITE_ALLOWED_ORIGINS=https://stylingadventures.com,https://www.stylingadventures.com
