{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "bin/**/*.ts",
    "lib/**/*.ts",
    "lambda/**/*.ts"
  ],
  "exclude": [
    "lib/stacks/web/**",
    "node_modules",
    "cdk.out"
  ]
}

