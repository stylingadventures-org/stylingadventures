{
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cd site && npm run build",
    "build:infra": "tsc -p tsconfig.build.json",
    "build:site": "cd site && npm run build",

    "test": "jest -c jest.config.cjs",
    "test:watch": "jest -c jest.config.cjs --watch",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",

    "plan": "npx cdk synth && npx cdk diff",
    "deploy": "npm run build && npx cdk deploy --concurrency 1 --require-approval never",
    "deploy:dev": "npm run build && npx cdk deploy --all --require-approval never",
    "plan:dev": "npx cdk synth && npx cdk diff --all",
    "destroy": "npx cdk destroy --force",

    "check": "bash scripts/check-prereqs.sh || scripts/check-prereqs.cmd",
    "postdeploy": "node scripts/write-outputs.js",

    "smoke": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/smoke-after-deploy.ps1 -StackName BestiesClosetStack -Region us-east-1",
    "deploy:smoke": "npm run deploy -- BestiesClosetStack && npm run smoke"
  },
  "dependencies": {
