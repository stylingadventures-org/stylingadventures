    "@aws-sdk/client-sqs": "^3.906.0",
    "@aws-sdk/lib-dynamodb": "^3.948.0",
    "@aws-sdk/s3-request-presigner": "^3.943.0",
    "@aws-sdk/util-dynamodb": "^3.913.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@monaco-editor/react": "^4.7.0",
    "codemirror": "^5.65.20",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.4",
    "jimp": "^0.22.12",
    "node-fetch": "^3.3.2",
    "react-codemirror2": "^9.0.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.9.5",
